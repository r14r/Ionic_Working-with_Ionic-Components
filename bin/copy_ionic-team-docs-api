#!/usr/local/bin/bash

_DIR="/CLOUD/Development.Ionic/Repositories.FromGithub/repositories"
_DST="$_DIR/ionic-toolbox/Working-with_Ionic-Components/app/src/app"

_SRC="$_DIR/ionic-team/ionic-docs/src/demos/api"
_FLD=site-api

echo "cd $_DST"

ls -1d $_SRC/*		|\
while read _TMP
do
	_CMP="$(basename "$(dirname "$_TMP")")"
	_CMP="$(basename "$_TMP")"

	echo "ionic generate page     pages/$_FLD/${_CMP,,}"
	echo "rm -rf            $_DST/pages/$_FLD/${_CMP,,}/demo"
	echo "cp -R $_SRC/$_CMP $_DST/pages/$_FLD/${_CMP,,}/demo"
done